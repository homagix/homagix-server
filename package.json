{
  "name": "homagix-server",
  "version": "5.5.1",
  "description": "Homagix is a tool to plan a week's dishes and shopping lists. This is the server part. See https://github.com/jschirrmacher/homagix-frontend fir the frontend",
  "scripts": {
    "dev": "ts-node -r dotenv-flow/config src",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:types": "tsc",
    "build": "esbuild --bundle --platform=node --sourcemap ./src --outfile=build/server.js",
    "docker:build": "docker build -t homagix-server .",
    "start": "NOD_ENV=production node -r dotenv-flow/config build/server.js"
  },
  "author": "Joachim Schirrmacher <joachim@dilab.co>",
  "license": "MIT",
  "engine": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "cookie-parser": "1.4.6",
    "dotenv-flow": "3.2.0",
    "express": "4.18.2",
    "express-session": "1.17.3",
    "mustache": "4.2.0",
    "nodemailer": "6.8.0",
    "passport": "0.6.0",
    "passport-jwt": "4.0.0",
    "yaml": "2.1.3"
  },
  "devDependencies": {
    "@jest/types": "29.3.1",
    "@types/bcryptjs": "2.4.2",
    "@types/connect-history-api-fallback": "1.3.5",
    "@types/cookie-parser": "1.4.3",
    "@types/express": "4.17.14",
    "@types/express-session": "1.17.5",
    "@types/jest": "29.2.3",
    "@types/jsonwebtoken": "8.5.9",
    "@types/mock-req-res": "1.1.3",
    "@types/passport": "1.0.11",
    "@types/passport-jwt": "3.0.7",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.44.0",
    "esbuild": "0.15.16",
    "eslint": "8.28.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.3.1",
    "mock-req-res": "1.2.1",
    "prettier": "2.8.0",
    "supertest": "6.3.1",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.9.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
