{
  "name": "homagix-server",
  "version": "5.5.1",
  "description": "Homagix is a tool to plan a week's dishes and shopping lists. This is the server part. See https://github.com/jschirrmacher/homagix-frontend fir the frontend",
  "scripts": {
    "dev": "ts-node -r dotenv-flow/config src",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:types": "tsc",
    "build": "esbuild --bundle --platform=node --sourcemap ./src --outfile=build/server.js",
    "docker:build": "docker build -t homagix-server .",
    "start": "NOD_ENV=production node -r dotenv-flow/config build/server.js"
  },
  "author": "Joachim Schirrmacher <joachim@dilab.co>",
  "license": "MIT",
  "engine": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "cookie-parser": "1.4.6",
    "dotenv-flow": "3.2.0",
    "express": "4.18.1",
    "express-session": "1.17.3",
    "mustache": "4.2.0",
    "nodemailer": "6.7.7",
    "passport": "0.6.0",
    "passport-jwt": "4.0.0",
    "yaml": "2.1.1"
  },
  "devDependencies": {
    "@jest/types": "28.1.3",
    "@types/bcryptjs": "2.4.2",
    "@types/connect-history-api-fallback": "1.3.5",
    "@types/cookie-parser": "1.4.3",
    "@types/express": "4.17.13",
    "@types/express-session": "1.17.5",
    "@types/jest": "28.1.6",
    "@types/jsonwebtoken": "8.5.8",
    "@types/mock-req-res": "1.1.3",
    "@types/passport": "1.0.9",
    "@types/passport-jwt": "3.0.6",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.30.6",
    "esbuild": "0.14.49",
    "eslint": "8.19.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "28.1.3",
    "mock-req-res": "1.2.0",
    "prettier": "2.7.1",
    "supertest": "6.2.4",
    "ts-jest": "28.0.6",
    "ts-node": "10.9.1",
    "typescript": "4.7.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
