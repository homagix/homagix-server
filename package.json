{
  "name": "homagix-server",
  "version": "5.0.0",
  "description": "Homagix is a tool to plan a week's dishes and shopping lists. This is the server part. See https://github.com/jschirrmacher/homagix-frontend fir the frontend",
  "scripts": {
    "dev": "ts-node -r dotenv-flow/config src",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:types": "tsc",
    "build": "esbuild --bundle --platform=node --sourcemap ./src --outfile=build/server.js",
    "docker:build": "docker build -t homagix-server .",
    "start": "NOD_ENV=production node -r dotenv-flow/config build/server.js"
  },
  "author": "Joachim Schirrmacher <joachim@dilab.co>",
  "license": "MIT",
  "engine": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-history-api-fallback": "^1.6.0",
    "cookie-parser": "^1.4.5",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "mustache": "^4.2.0",
    "nodemailer": "^6.7.0",
    "passport": "^0.5.0",
    "passport-jwt": "^4.0.0",
    "uuid": "^8.3.2",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@jest/types": "^27.2.5",
    "@types/bcryptjs": "^2.4.2",
    "@types/connect-history-api-fallback": "^1.3.5",
    "@types/cookie-parser": "^1.4.2",
    "@types/event-stream": "^3.3.34",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/mock-req-res": "^1.1.3",
    "@types/passport": "^1.0.7",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "esbuild": "^0.13.13",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.3.1",
    "mock-req-res": "^1.2.0",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
