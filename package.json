{
  "name": "homagix-server",
  "version": "6.0.0",
  "description": "Homagix is a tool to plan a week's dishes and shopping lists. This is the server part. See https://github.com/homagix/homagix-frontend for the frontend",
  "scripts": {
    "dev": "ts-node -r dotenv-flow/config src",
    "lint": "eslint src/**/*.ts",
    "lint:types": "tsc",
    "test": "npm run lint && npm run test:unit",
    "test:watch": "vitest",
    "test:unit": "vitest --run",
    "test:coverage": "vitest --run --coverage",
    "build": "esbuild --bundle --platform=node --sourcemap ./src --outfile=build/server.js",
    "docker:build": "docker build -t homagix-server:latest .",
    "docker:publish": "docker push homagix-server:latest",
    "update": "npx -y npm-check-updates -d -u -e 2",
    "start": "NOD_ENV=production node -r dotenv-flow/config build/server.js"
  },
  "author": "Joachim Schirrmacher <joachim@dilab.co>",
  "license": "MIT",
  "engine": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "cookie-parser": "1.4.6",
    "dotenv-flow": "3.2.0",
    "express": "4.18.2",
    "express-session": "1.17.3",
    "mustache": "4.2.0",
    "nodemailer": "6.9.3",
    "passport": "0.6.0",
    "passport-jwt": "4.0.1",
    "yaml": "2.3.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/connect-history-api-fallback": "1.5.0",
    "@types/cookie-parser": "1.4.3",
    "@types/express": "4.17.17",
    "@types/express-session": "1.17.7",
    "@types/jsonwebtoken": "9.0.2",
    "@types/mock-req-res": "1.1.3",
    "@types/passport": "1.0.12",
    "@types/passport-jwt": "3.0.9",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "6.1.0",
    "@vitest/coverage-c8": "^0.33.0",
    "esbuild": "0.18.13",
    "eslint": "8.45.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "5.0.0",
    "mock-req-res": "1.2.1",
    "prettier": "3.0.0",
    "supertest": "6.3.3",
    "ts-node": "10.9.1",
    "typescript": "5.1.6",
    "vitest": "^0.33.0"
  }
}
