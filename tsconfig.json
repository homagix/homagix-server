{
  "compilerOptions": {
    "baseUrl": "/",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": ["es2020"],
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"]
}
